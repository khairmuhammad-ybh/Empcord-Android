<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/logo_transparent"
        android:layout_marginBottom="25dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/report_worker_lbl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_worker_lbl_name"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/report_worker_spinner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">

        </Spinner>

    </LinearLayout>

    <Button
        android:id="@+id/report_worker_btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_worker_btn_report"
        android:paddingTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:paddingEnd="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:paddingStart="30dp" />

    <!-- Worker's Report table format -->
    <TableLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:id="@+id/report_worker_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        >
        <TableRow
            android:background="@android:color/black"
            >
            <TextView
                android:gravity="center"
                android:text="Completion"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                />

            <TextView
                android:gravity="center"
                android:text="Date"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                />


        </TableRow>

    </TableLayout>


</LinearLayout>